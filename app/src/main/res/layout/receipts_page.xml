<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#9D00FF">

    <LinearLayout
        android:id="@+id/top_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="#9D00FF"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/back_icon_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:cardBackgroundColor="#9D00FF">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:padding="20dp"
                app:srcCompat="@drawable/back_icon" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/left_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:cardBackgroundColor="#9D00FF">

            <androidx.cardview.widget.CardView
                android:id="@+id/logo_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                app:cardBackgroundColor="#9D00FF">

                <ImageView
                    android:id="@+id/logo7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:padding="13dp"
                    android:src="@drawable/logo" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/name_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="#9D00FF">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/app_name_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/greeting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_nav_bar">

        <androidx.cardview.widget.CardView
            android:id="@+id/greeting_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#9D00FF">

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:fontFamily="sans-serif-condensed"
                android:padding="5dp"
                android:text="@string/mpesa_payment_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fromCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:elevation="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toTopOf="@+id/white_line_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="#959179">

            <EditText
                android:id="@+id/add_route_end_input_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginRight="75dp"
                android:background="#959179"
                android:hint="@string/search_payment_text"
                android:inputType="text"
                android:padding="30dp"
                android:textColor="#000000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000" />

            <Spinner
                android:id="@+id/bus_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:background="#959179"
                android:padding="30dp" /> <!-- Background color can be adjusted -->

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_margin="15dp"
                app:srcCompat="@drawable/search_icon" />

        </androidx.cardview.widget.CardView>


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:maxHeight="500dp"> <!-- Adjust maxHeight to limit scroll height -->

            <!-- Table layout to hold the columns -->
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <!-- Table Header Row -->
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#9D00FF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Mpesa \nPayment ID"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Bus\nNo.Plate"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Route\nStart"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Route\nEnd"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Amount"
                        android:textStyle="bold" />
                </TableRow>

                <!-- Row 1 to Row 8 - Sample Data Rows -->
                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP12345678" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123A" />

                    <TextView
                        android:padding="8dp"
                        android:text="Nairobi" />

                    <TextView
                        android:padding="8dp"
                        android:text="Mombasa" />

                    <TextView
                        android:padding="8dp"
                        android:text="5000" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP23456789" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123B" />

                    <TextView
                        android:padding="8dp"
                        android:text="Kisumu" />

                    <TextView
                        android:padding="8dp"
                        android:text="Nairobi" />

                    <TextView
                        android:padding="8dp"
                        android:text="4500" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP34567890" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123C" />

                    <TextView
                        android:padding="8dp"
                        android:text="Eldoret" />

                    <TextView
                        android:padding="8dp"
                        android:text="Nakuru" />

                    <TextView
                        android:padding="8dp"
                        android:text="3000" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP45678901" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123D" />

                    <TextView
                        android:padding="8dp"
                        android:text="Mombasa" />

                    <TextView
                        android:padding="8dp"
                        android:text="Voi" />

                    <TextView
                        android:padding="8dp"
                        android:text="5500" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP56789012" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123E" />

                    <TextView
                        android:padding="8dp"
                        android:text="Machakos" />

                    <TextView
                        android:padding="8dp"
                        android:text="Wote" />

                    <TextView
                        android:padding="8dp"
                        android:text="2000" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP67890123" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123F" />

                    <TextView
                        android:padding="8dp"
                        android:text="Thika" />

                    <TextView
                        android:padding="8dp"
                        android:text="Nairobi" />

                    <TextView
                        android:padding="8dp"
                        android:text="1800" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP78901234" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123G" />

                    <TextView
                        android:padding="8dp"
                        android:text="Kisii" />

                    <TextView
                        android:padding="8dp"
                        android:text="Nyamira" />

                    <TextView
                        android:padding="8dp"
                        android:text="2200" />
                </TableRow>

                <TableRow android:background="#FFFFFF">

                    <TextView
                        android:padding="8dp"
                        android:text="MP89012345" />

                    <TextView
                        android:padding="8dp"
                        android:text="KBC123H" />

                    <TextView
                        android:padding="8dp"
                        android:text="Meru" />

                    <TextView
                        android:padding="8dp"
                        android:text="Embu" />

                    <TextView
                        android:padding="8dp"
                        android:text="2600" />
                </TableRow>

            </TableLayout>
        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/white_line_design"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/home_icon_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/home_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:background="#9D00FF"
                android:contentDescription="@string/home_icon_description"
                android:padding="30dp"
                android:src="@drawable/home_icon" /> <!-- Content description added -->

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/receipts_icon_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/receipts_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#9D00FF"
                android:contentDescription="@string/receipts_icon_description"
                android:padding="30dp"
                android:src="@drawable/receipt_icon" /> <!-- Content description added -->

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_icon_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9D00FF"
                android:contentDescription="@string/profile_icon_description"
                android:padding="30dp"
                android:src="@drawable/person_icon" /> <!-- Content description added -->

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>